@{
    Layout = null;

}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <link rel="icon" href="img/battery logo.png" type="image/x-icon">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Turn IT Greener</title>

    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
    <link href="css/sb-admin.css" rel="stylesheet">
</head>
<body id="page-top">
    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">
        <a class="navbar-brand mr-1" href="index.html">Turn IT Greener</a>
        <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
            <i class="fas fa-bars"></i>
        </button>
        <div>
            <ul class="navbar-nav px-3">
                <li class="nav-item text-nowrap">
                    <a class="nav-link" asp-action="logout" asp-controller="account">Sair</a>
                </li>
            </ul>
        </div>
    </nav>
    <div id="wrapper">
        <ul class="sidebar navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" asp-action="index" asp-controller="principalhome">
                    <i class="fas fa-fw fa-home"></i>
                    <span>Início</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="index" asp-controller="profile">
                    <i class="fas fa-fw fa-user"></i>
                    <span>Meu Perfil</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="index" asp-controller="principalranking">
                    <i class="fas fa-fw fa-chart-bar"></i>
                    <span>Ranking</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="index" asp-controller="map">
                    <i class="fas fa-fw fa-map-marked-alt"></i>
                    <span>Lugares para descarte</span>
                </a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-cog"></i>
                    <span>Configurações</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    <a class="dropdown-item" asp-action="index" asp-controller="account">Conta</a>
                    <a class="dropdown-item" asp-action="index" asp-controller="password">Alterar Senha</a>
                </div>
            </li>
        </ul>

        <div id="">
            <div class="">
                <div id="demo" class="carousel slide" data-ride="carousel">
                    <ul id="carousel-indicators" class="carousel-indicators">
                        <li data-target="#demo" data-slide-to="0" class="active"></li>
                        <li data-target="#demo" data-slide-to="1"></li>
                        <li data-target="#demo" data-slide-to="2"></li>
                    </ul>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/img/rio-de-janeiro-1534089_1920.jpg" alt="Los Angeles" width="100%" height="653">
                            <div style="bottom: 5%" class="carousel-caption caption">
                                <h3>Cuidar, guardar, preservar o meio ambiente</h3>
                                <p>Responsabilidade de todos nós</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/waterfall-1417101_1920.jpg" alt="Chicago" width="100%" height="653">
                            <div style="bottom: 5%" class="carousel-caption caption">
                                <h3>Preservar a Natureza</h3>
                                <p>é a chave para manter o equilíbrio ambiental</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/waterfall-1417102_1920.jpg" alt="New York" width="100%" height="653">
                            <div style="bottom: 5%" class="carousel-caption caption">
                                <h3>Não cuide apenas do Meio Ambiente</h3>
                                <p> mas sim dele inteiro.</p>
                            </div>
                        </div>
                    </div>
                    <a id="button-prev" class="carousel-control-prev button" href="#demo" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </a>
                    <a id="button-next" class="carousel-control-next" href="#demo" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </a>
                </div>
            </div>
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>© @DateTime.Now.Year - Turn IT Greener</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <script type="text/javascript">
            $(document).keydown(function(e) {
            if (e.keyCode === 37) {
               // Previous
               $("#button-prev").click();
               return false;
            }
            if (e.keyCode === 39) {
               // Next
                $("#button-next").click();
                return false;
            }
        });
    </script>
</body>
</html>