    <div class="modal fade" id="loginModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <section style="padding-top: 10px" class="container">
                        <form style="padding-bottom: 60px" class="form-login">
                            <h1 style="bottom: 20px" class="h2 mb-4 font-weight-normal">Login</h1>

                            <label for="inputEmail" class="sr-only">Email</label>
                            <input style="bottom: 10px" type="email" id="emailLogin" class="form-control" placeholder="Digite seu email" required autofocus>

                            <label for="inputPassword" class="sr-only">Senha</label>
                            <input style="bottom: 5px" type="password" id="senhaLogin" class="form-control" placeholder="Digite sua senha" required>

                            <button id="botaoEntrar" class="btn btn-lg btn-dark btn-block" onclick="handleLogin(event)" type="button">Entrar</button>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="cadastrarModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <section style="padding-top: 10px" class="container">
                        <form style="padding-bottom: 60px" class="form-login">
                            <h1 style="bottom: 20px" class="h2 mb-4 font-weight-normal">Cadastrar</h1>

                            <div>
                                <label>Nome</label>
                                <input type="text" id="nome" class="form-control" placeholder="" required>
                                <span id="ErroNome" class="text-danger">a</span>
                            </div>

                            <div>
                                <label style="padding-top: 15px">Email</label>
                                <input type="text" id="email" class="form-control" placeholder="email@email.com" required>
                                <span id="ErroEmail" class="text-danger">a</span>
                            </div>

                            <div>
                                <label style="padding-top: 15px">Senha</label>
                                <input type="password" id="senha" class="form-control" placeholder="" required>
                            </div>

                            <div>
                                <label>Confirmar Senha</label>
                                <input type="password" id="confirmar-senha" class="form-control" placeholder="" required>
                            </div>

                            <button id="btnCadastrar" class="btn btn-lg btn-dark btn-block" onclick="" type="submit">Cadastrar</button>
                        </form>
                    </section>
                </div>
